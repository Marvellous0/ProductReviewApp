
@model ProductReviewApp.Models.ViewModel.CreateUserViewModel

@{ ViewBag.Title = "Create User";
}
<div class="row justify-content-center">
    <div class="card">
        <div class="card-header">
            <h1 class="text-center">User Registration</h1>
        </div>

        <form method="post">
            <div class="form-group">

                <input asp-for="Name" class="form-control" placeholder="Enter Name" />
                <span asp-validation-for="Name" class="text-danger"></span><br />

                <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                <span asp-validation-for="Email" class="text-danger"></span><br />

                <input type="radio" name="gender" value="Male" />Male<br> <input type="radio" name="gender" value="Female" />Female
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit Form" class="btn btn-success" />
            </div>
        </form>

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




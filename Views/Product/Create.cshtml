@model ProductReviewApp.Models.ViewModel.CreateProductViewModel
@{
    ViewBag.Title = "Create Product";
}

<div class="row justify-content-center">
    <div class="card">

        <div class="card-header">
            <h1>Create Product</h1>
        </div>
        <div class="card-body">

            <form method="post">

                <div class="form-group">
                    <input asp-for="Name" placeholder="Enter Product Name " class="form-control" required />
                </div>

                <div class="form-group">
                    <textarea asp-for="Description" placeholder="Enter Product Description" class="form-control" required ></textarea>
                </div>

                <select asp-for="UserId" asp-items="ViewBag.users" class="form-control" required>
                    <option selected>--Select Manufactures--</option>

                </select>

                <input type="submit" value="Submit " class="btn btn-primary" />
            </form>
        </div>

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
